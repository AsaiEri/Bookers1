<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @lists.each do |list| %>
  <tbody>
    <tr>
      <td><%= list.title%></td>
      <td><%= list.body%></td>
      <td><%= link_to "show", book_path(list.id) %></td>
      <td><%= link_to "edit", edit_book_path(list.id) %></td>
      <td><%= link_to "Destroy", destroy_book_path(list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>


  <!--<p>本のタイトル</p>-->
  <!--<span>-->
  <!--   %= link_to list.title, book_path(list.id) %>-->
  <!--</span>-->

<% end %>

</table>

<div>
  <%= flash[:notice] %>
</div>

<h2>New books</h2>
<%= form_with model: Book.new do |f| %>

<!-- form_with部分 -->
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のerrorが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>