<h1>編集画面</h1>

<% if @list.errors.any? %>
  <%= @list.errors.count %>件のerrorが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @list do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  
  <h4>感想</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
  
<% end %>

<%= link_to "Show", book_path(@list.id) %>
<%= link_to "Back", books_path %>

