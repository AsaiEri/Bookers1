<div>
  <%= flash[:notice] %>
</div>

<h1>新規投稿</h1>
<%= form_with model: Book.new do |f| %>

<!-- form_with部分 -->
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のerroが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
	
  <h4>感想</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
  
<% end %>